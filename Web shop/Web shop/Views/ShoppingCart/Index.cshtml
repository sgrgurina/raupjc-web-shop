@model Webshop.Models.ShopViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
    <tr>
        <th>Item name</th>
        <th>Price of one item</th>
        <th>Quantity</th>
        <th>Total price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ShoppingCart.CartItems)
    {
        <tr>
            <td>@item.ShopItem.Name</td>
            <td>@item.ShopItem.Price.ToString("C")</td>
            <td>@item.Amount</td>
            <td>@((item.ShopItem.Price * item.Amount).ToString("C"))</td>
            <td><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" , asp-route-itemId="@item.ShopItem.Id">Remove One</a></td>
            <td><a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" , asp-route-itemId="@item.ShopItem.Id">Add Another</a></td>
        </tr>
    }
    </tbody>
    
</table>
<h4>Total Price: @Model.ShoppingCartTotalPrice.ToString("C")</h4>